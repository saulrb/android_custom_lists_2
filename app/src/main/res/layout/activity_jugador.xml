<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_jugador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.itesm.m6_srb_labo_listaspersonalizadas2.JugadorActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/jugador_nombre"
        android:layout_weight="0.11"
        android:hint="@string/nombre"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.45">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/i_v_foto"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/foto"/>

        <Button
            android:text="@string/tomar_foto"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:id="@+id/button_tomar_foto" />
    </LinearLayout>

    <Button
        android:text="@string/guardar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/button_guadar_jugador"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
